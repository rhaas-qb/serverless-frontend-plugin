{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Frontend stack for a serverless application",

  "Parameters": {
    "Stage": {
      "Type": "String"
    },
    "ServiceName": {
      "Type": "String"
    },
    "BucketName": {
      "Type": "String"
    },
    "IndexDocument": {
      "Type": "String"
    },
    "ErrorDocument": {
      "Type": "String"
    }
  },

  "Resources": {
    "FrontendBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Ref": "BucketName"
        },
        "WebsiteConfiguration": {
          "IndexDocument": {
            "Ref": "IndexDocument"
          },
          "ErrorDocument": {
            "Ref": "ErrorDocument"
          }
        },
        "VersioningConfiguration": {
          "Status": "Suspended"
        }
      }
    },
    "BucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "FrontendBucket"
        },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Principal": "*",
              "Effect": "Allow",
              "Action": "s3:GetObject",
              "Resource": {
                "Fn::Sub": "arn:aws:s3:::${FrontendBucket}/*"
              }
            }
          ]
        }
      }
    }
  },

  "Outputs": {
    "S3WebsiteUrl": {
      "Value": {
        "Fn::GetAtt": [
          "FrontendBucket",
          "WebsiteURL"
        ]
      }
    }
  }
}