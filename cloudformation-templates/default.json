{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Frontend stack for a serverless application",

  "Parameters": {
    "Stage": {
      "Type": "String"
    },
    "ServiceName": {
      "Type": "String"
    },
    "BucketName": {
      "Type": "String"
    },
    "IndexDocument": {
      "Type": "String"
    },
    "ErrorDocument": {
      "Type": "String"
    }
  },

  "Resources": {
    "FrontendBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Ref": "BucketName"
        },
        "AccessControl": "PublicRead",
        "WebsiteConfiguration": {
          "IndexDocument": {
            "Ref": "IndexDocument"
          },
          "ErrorDocument": {
            "Ref": "ErrorDocument"
          }
        },
        "VersioningConfiguration": {
          "Status": "Suspended"
        }
      }
    }
  },

  "Outputs": {
    "S3WebsiteUrl": {
      "Value": {
        "Fn::GetAtt": [
          "FrontendBucket",
          "WebsiteURL"
        ]
      }
    }
  }
}