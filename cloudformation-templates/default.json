{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Frontend stack for a serverless application",

  "Parameters": {
    "AcmCertificateArn": {
      "Type": "String"
    },
    "Aliases": {
      "Type": "CommaDelimitedList"
    },
    "Stage": {
      "Type": "String",
      "Default": ""
    },
    "ServiceName": {
      "Type": "String"
    },
    "BucketName": {
      "Type": "String"
    },
    "IndexDocument": {
      "Type": "String"
    },
    "ErrorDocument": {
      "Type": "String"
    }
  },

  "Conditions": {
    "UseStage": {
      "Fn::Not": [
        {
          "Fn::Equals": [
            { "Ref": "Stage" },
            ""
          ]
        }
      ]
    }
  },

  "Resources": {
    "FrontendBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Ref": "BucketName"
        },
        "WebsiteConfiguration": {
          "IndexDocument": {
            "Ref": "IndexDocument"
          },
          "ErrorDocument": {
            "Ref": "ErrorDocument"
          }
        },
        "VersioningConfiguration": {
          "Status": "Suspended"
        }
      }
    },
    "BucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "FrontendBucket"
        },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Principal": "*",
              "Effect": "Allow",
              "Action": "s3:GetObject",
              "Resource": {
                "Fn::Sub": "arn:aws:s3:::${FrontendBucket}/*"
              }
            }
          ]
        }
      }
    },
    "Distribution": {
      "Type" : "AWS::CloudFront::Distribution",
      "Properties" : {
          "DistributionConfig" : {
            "Aliases": {
              "Ref": "Aliases"
            },
            "AcmCertificateArn": {
              "Ref": "AcmCertificateArn"
            },
            "DefaultRootObject": {
              "Ref": "IndexDocument"
            },
            "Origins": [
              {
                "Id": "frontend-s3-origin",
                "DomainName": {
                  "Fn::Sub": "${FrontendBucket}.s3.${AWS::Region}.amazonaws.com"
                }
              }
            ]
          },
          "Tags" : [
            {
              "Key": "Name",
              "Value": {
                "Fn::If": [
                  "UseSage",
                  { "Fn::Sub": "${ServiceName}-${Stage}" },
                  { "Ref": "ServiceName" }
                ]
              }
            }
          ]
        }
    }    
  },

  "Outputs": {
    "FrontendUrl": {
      "Value": {
        "Fn::Sub": [
          "https://${url}",
          {
            "url": {
              "Fn::GetAtt": ["Distribution", "DomainName"]
            }
          }
        ]
      }
    }
  }
}